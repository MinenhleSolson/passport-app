<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" id="register">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-alt"></i> Register
        </h1>
        <% include ./partials/messages %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name" style="color: white;">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email" style="color: white;">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password" style="color: white;">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2" style="color: white;">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-block" style="background-color: orange; color:white;">
            Register
          </button>
        </form>
        <p class="lead mt-4" style="color: white;">Have An Account? <a href="/users/login" style="color: orange;">Login</a></p>
      </div>
    </div>
  </div>