<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" id="register">
        <h1 class="text-center mb-3">Login</h1>
        <% include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email" style="color: white;">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password" style="color: white;">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-block" style="background-color: orange; color:white;">Login</button>
        </form>
        <p class="lead mt-4" style="color: white;">
          No Account? <a href="/users/register" style="color: orange;">Register</a>
        </p>
      </div>
    </div>
  </div>